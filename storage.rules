rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Only hosts can upload images
    match /images/{userId}/{imageFile} {
      // Anyone authenticated can read images
      allow read: if request.auth != null;
      
      // Only the user uploading or a host can write
      allow write: if request.auth != null && 
                     (request.auth.uid == userId || 
                      firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.isHost == true);
    }
  }
}
